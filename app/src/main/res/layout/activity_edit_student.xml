<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:gravity="center_horizontal"
    tools:context=".EditStudentActivity">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/pressuattend"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Enrollment"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/poppins_regular"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingBottom="20dp"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/et_user_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="User ID (Enrollment Key)"
                android:textSize="16sp"
                android:padding="12dp"
                android:enabled="false"
                android:textColor="#999999"
                android:layout_marginBottom="10dp" />
<!--                android:background="@drawable/custom_edittext_disabled"-->


            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Student Name"
                android:textSize="16sp"
                android:padding="12dp"
                android:inputType="textCapWords"
                android:layout_marginBottom="10dp" />
<!--                android:background="@drawable/custom_edittext"-->


            <EditText
                android:id="@+id/et_roll_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Roll No."
                android:textSize="16sp"
                android:padding="12dp"
                android:enabled="false"
                android:textColor="#999999"
                android:inputType="textCapCharacters"
                android:layout_marginBottom="10dp" />
<!--                android:background="@drawable/custom_edittext_disabled"-->


            <EditText
                android:id="@+id/et_dept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Department"
                android:textSize="16sp"
                android:padding="12dp"
                android:inputType="textCapWords"
                android:layout_marginBottom="10dp" />
<!--                android:background="@drawable/custom_edittext"-->


            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:textSize="16sp"
                android:padding="12dp"
                android:inputType="phone"
                android:layout_marginBottom="10dp" />

<!--            android:background="@drawable/custom_edittext"-->

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textSize="16sp"
                android:padding="12dp"
                android:enabled="false"
                android:textColor="#999999"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="10dp" />
<!--                android:background="@drawable/custom_edittext_disabled"-->


            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password (Not Editable)"
                android:textSize="16sp"
                android:padding="12dp"
                android:enabled="false"
                android:textColor="#999999"
                android:inputType="textPassword"
                android:layout_marginBottom="20dp" />
<!--                android:background="@drawable/custom_edittext_disabled"-->


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="Update Information"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/custom_button"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:backgroundTint="#003366"
        android:layout_marginBottom="16dp"
        android:onClick="updateStudentInfo" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="Cancel"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/custom_button"
        android:textSize="20sp"
        android:textColor="#003366"
        android:textAllCaps="false"
        android:backgroundTint="@android:color/transparent"
        app:strokeColor="#003366"
        app:strokeWidth="1dp"
        android:layout_marginBottom="30dp"
        android:onClick="cancelEdit" />

</LinearLayout>