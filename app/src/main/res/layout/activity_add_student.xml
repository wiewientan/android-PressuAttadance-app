<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    tools:context=".AddStudentActivity">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:src="@drawable/pressuattend"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">

            <EditText
                android:id="@+id/editText5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Student Id"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/rounded_edittext"
                android:inputType="text"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:backgroundTint="#FFFFFF"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/editText6"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter Student Name"
                android:fontFamily="@font/poppins_regular"
                android:inputType="text"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="#FFFFFF"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/editText7"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Roll No."
                android:fontFamily="@font/poppins_regular"
                android:inputType="number"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="#FFFFFF"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/editText8"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Department"
                android:fontFamily="@font/poppins_regular"
                android:inputType="text"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="#FFFFFF"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/editText9"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Phone Number"
                android:fontFamily="@font/poppins_regular"
                android:inputType="phone"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="#FFFFFF"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/editText10"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Email"
                android:fontFamily="@font/poppins_regular"
                android:inputType="textEmailAddress"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="#FFFFFF"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/editText11"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Password"
                android:fontFamily="@font/poppins_regular"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="#FFFFFF"
                android:layout_marginBottom="20dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subjects"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:layout_marginBottom="20dp">


                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Information System 1"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16sp"/>

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Information System 2"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16sp"/>

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Information System 3"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16sp"/>

                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Information System 4"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16sp"/>


            </LinearLayout>

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Register"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/custom_button"
                android:onClick="fnRegister"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:backgroundTint="#003366"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>